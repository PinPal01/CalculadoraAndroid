<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textViewNumero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffcaccff"
        android:textSize="26sp"
        android:layout_toLeftOf="@+id/buttonCos"
        android:layout_toStartOf="@+id/buttonCos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/buttonDos"
        android:layout_alignTop="@+id/buttonUno"
        android:layout_toRightOf="@+id/buttonUno"
        android:layout_toEndOf="@+id/buttonUno"
        android:onClick="onClickButtonDos"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/buttonTres"
        android:layout_alignTop="@+id/buttonDos"
        android:layout_toRightOf="@+id/buttonDos"
        android:layout_toEndOf="@+id/buttonDos"
        android:onClick="onClickButtonTres"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/buttonMultiplicacion"
        android:layout_alignTop="@+id/buttonTres"
        android:layout_toRightOf="@+id/buttonTres"
        android:layout_toEndOf="@+id/buttonTres"
        android:onClick="onClickMultiplicacion"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/buttonCuatro"
        android:layout_below="@+id/buttonUno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonDos"
        android:layout_toStartOf="@+id/buttonDos"
        android:onClick="onClickButtonCuatro"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/buttonCinco"
        android:layout_below="@+id/buttonDos"
        android:layout_toRightOf="@+id/buttonCuatro"
        android:layout_toEndOf="@+id/buttonCuatro"
        android:onClick="onClickButtonCinco"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/buttonSeis"
        android:layout_below="@+id/buttonTres"
        android:layout_toRightOf="@+id/buttonCinco"
        android:layout_toEndOf="@+id/buttonCinco"
        android:onClick="onClickButtonSeis"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/buttonSiete"
        android:layout_below="@+id/buttonCuatro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickButtonSiete"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/buttonOcho"
        android:layout_below="@+id/buttonCinco"
        android:layout_toRightOf="@+id/buttonSiete"
        android:layout_toEndOf="@+id/buttonSiete"
        android:onClick="onClickButtonOcho"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/buttonNueve"
        android:layout_below="@+id/buttonSeis"
        android:layout_toRightOf="@+id/buttonOcho"
        android:layout_toEndOf="@+id/buttonOcho"
        android:onClick="onClickButtonNueve"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonResta"
        android:layout_below="@+id/buttonDivision"
        android:layout_toRightOf="@+id/buttonNueve"
        android:layout_toEndOf="@+id/buttonNueve"
        android:onClick="onClickResta"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/buttonCero"
        android:layout_below="@+id/buttonSiete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickButtonCero"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/buttonPunto"
        android:layout_below="@+id/buttonOcho"
        android:layout_toRightOf="@+id/buttonCero"
        android:layout_toEndOf="@+id/buttonCero"
        android:onClick="onClickButtonPunto"
        android:textSize="20sp" />


    <Button
        android:text="cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCos"
        android:onClick="onClickCoseno"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/buttonMas"
        android:layout_alignBottom="@+id/buttonMas"
        android:layout_toRightOf="@+id/buttonMas"
        android:layout_toEndOf="@+id/buttonMas" />

    <Button
        android:text="tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTan"
        android:onClick="onClickTan"
        android:textSize="20sp"
        android:layout_above="@+id/buttonBorrarTodo"
        android:layout_toRightOf="@+id/buttonRaiz"
        android:layout_toEndOf="@+id/buttonRaiz" />

    <Button
        android:text="sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSin"
        android:onClick="onClickSeno"
        android:textSize="20sp"
        android:layout_above="@+id/buttonPotencia"
        android:layout_toRightOf="@+id/buttonMas"
        android:layout_toEndOf="@+id/buttonMas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Todo"
        android:id="@+id/buttonBorrarTodo"
        android:onClick="onClickLimpia"
        android:textSize="20sp"
        android:layout_below="@+id/buttonNueve"
        android:layout_alignRight="@+id/buttonTan"
        android:layout_alignEnd="@+id/buttonTan"
        android:layout_toRightOf="@+id/buttonIgual"
        android:layout_toEndOf="@+id/buttonIgual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttonDivision"
        android:onClick="onClickDivision"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/buttonSeis"
        android:layout_alignBottom="@+id/buttonSeis"
        android:layout_toRightOf="@+id/buttonTres"
        android:layout_toEndOf="@+id/buttonTres" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonMas"
        android:onClick="onClickSuma"
        android:textSize="20sp"
        android:layout_above="@+id/buttonRaiz"
        android:layout_toRightOf="@+id/buttonMultiplicacion"
        android:layout_toEndOf="@+id/buttonMultiplicacion" />

    <Button
        android:text="âˆš"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRaiz"
        android:onClick="onClickRaiz"
        android:textSize="20sp"
        android:layout_above="@+id/buttonPotencia"
        android:layout_toRightOf="@+id/buttonMultiplicacion"
        android:layout_toEndOf="@+id/buttonMultiplicacion" />

    <Button
        android:text="^"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPotencia"
        android:onClick="onClickPotencia"
        android:textSize="20sp"
        android:layout_above="@+id/buttonIgual"
        android:layout_toRightOf="@+id/buttonResta"
        android:layout_toEndOf="@+id/buttonResta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/buttonIgual"

        android:onClick="onClickIgual"
        android:textSize="20sp"
        android:layout_below="@+id/buttonNueve"
        android:layout_toRightOf="@+id/buttonNueve"
        android:layout_toEndOf="@+id/buttonNueve" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/buttonUno"
        android:layout_marginTop="19dp"
        android:onClick="onClickButtonUno"
        android:textSize="20sp"
        android:layout_below="@+id/textViewNumero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textViewOperator"
        android:background="#ffcaccff"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textViewNumero"
        android:layout_alignRight="@+id/buttonCos"
        android:layout_alignEnd="@+id/buttonCos"
        android:layout_toRightOf="@+id/textViewNumero"
        android:layout_toEndOf="@+id/textViewNumero" />

</RelativeLayout>
